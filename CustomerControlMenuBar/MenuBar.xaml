<UserControl x:Class="WPFtutorial.Views.UsersControls.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFtutorial.Views.UsersControls"
             mc:Ignorable="d" 
             Height="70" d:DesignWidth="800">
    <Grid>
          <Grid.RowDefinitions>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
           </Grid.RowDefinitions>
            <!--Row Definition0 Height=30-->
            <Menu>
                <MenuItem Header="File" FontSize="16PX">
                    <MenuItem Header="Exit" FontSize="16PX"></MenuItem>
                </MenuItem>
                <MenuItem Header="Edit" FontSize="16PX"></MenuItem>
            </Menu>
            <!--Row Definition0 Height=40-->
            <Grid Grid.Row="1" >
                <Grid.ColumnDefinitions>
                    <!--Column Definition0 -->
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <!--Column Definition1 -->
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Width="50" Margin="5"></Button>
                <TextBox Grid.Column="1" Width="250" Margin="5"></TextBox>
            </Grid>
</UserControl>
